{
  "name": "@olton/easytest",
  "version": "0.45.0",
  "main": "src/index.js",
  "bin": {
    "easytest": "cli/easytest.js"
  },
  "types": "types/index.d.ts",
  "type": "module",
  "scripts": {
    "pub": "npm publish --access public",
    "test": "tsx cli/easytest.js --dom --verbose --coverage --report-type=html --include='__tests__/*.test.js'",
    "test:watch": "tsx cli/easytest.js --watch --include=__tests__/array.test.js"
  },
  "keywords": [
    "javascript",
    "typescript",
    "test",
    "framework",
    "html"
  ],
  "author": "Serhii Pimenov <serhii@pimenov.com.ua> (https://pimenov.com.ua)",
  "license": "MIT",
  "description": "Simple test framework for JavaScript and TypeScript with DOM supports",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olton/easytest.git"
  },
  "bugs": {
    "url": "https://github.com/olton/easytest/issues",
    "email": "serhii@pimenov.com.ua"
  },
  "dependencies": {
    "@happy-dom/global-registrator": "^17.4.3",
    "chalk": "^5.4.1",
    "glob": "^11.0.1",
    "happy-dom": "^17.4.3",
    "html-escaper": "^3.0.3",
    "puppeteer": "^24.4.0",
    "table": "^6.9.0",
    "yargs": "^17.7.2",
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
